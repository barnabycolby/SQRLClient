<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.barnabycolby.sqrlclient" >

    <uses-sdk
        android:targetSdkVersion="23"
        android:maxSdkVersion="23"
    />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".activities.ConfirmSiteNameActivity"
            android:label="@string/confirm_site_name_activity_label"
            >
            <!-- SQRL and QRL URI schemes -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="qrl" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="sqrl" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.LoginChoicesActivity"
            android:label="@string/login_choices_activity_label"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
